<Window x:Class="BudgetPlanerare.Views.AddTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetPlanerare.Views"
        mc:Ignorable="d"
        Title="Ny Transaktion" Height="580" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Background="{StaticResource BackgroundLight}">

    <Window.Resources>
        <!--<CollectionViewSource x:Key="GroupedCategories" Source="{Binding Categories}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="GroupName"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>-->
    </Window.Resources>

    <Border Padding="20">
        <StackPanel>
            <TextBlock Text="Lägg till transaktion" Style="{StaticResource HeaderStyle}"/>

            <TextBlock Text="Beskrivning" Style="{StaticResource LabelStyle}"/>
            <TextBox Text="{Binding Name}"/>

            <TextBlock Text="Belopp (kr)" Style="{StaticResource LabelStyle}"/>
            <TextBox Text="{Binding Amount}" />

            <TextBlock Text="Kategori" Style="{StaticResource LabelStyle}"/>
            <ComboBox ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding SelectedCategory}"
                      DisplayMemberPath="Name"/>

            <TextBlock Text="Datum" Style="{StaticResource LabelStyle}"/>
            <DatePicker SelectedDate="{Binding Date}"/>

            <TextBlock Text="Återkommande?" Style="{StaticResource LabelStyle}"/>
            <ComboBox ItemsSource="{Binding Frequencies}"
                      SelectedItem="{Binding SelectedFrequency}"
                      Margin="0,0,0,30"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Avbryt" Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,10,0"/>

                <Button Content="Spara" Command="{Binding SaveCommand}"
                        Width="100" Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </Border>

</Window>
