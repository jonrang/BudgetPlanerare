<Window x:Class="BudgetPlanerare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetPlanerare"
        mc:Ignorable="d"
        Title="BudgetPlanerare" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundLight}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="{StaticResource PrimaryDark}">
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="EKONOMI" Foreground="White" FontWeight="Bold" FontSize="18" Margin="20,0,0,30"/>

                <Button Content="Översikt" 
                        Command="{Binding ShowDashboardCommand}" 
                        Style="{StaticResource MenuButtonStyle}" />

                <Button Content="Transaktioner" 
                        Command="{Binding ShowAllTransactionsCommand}" 
                        Style="{StaticResource MenuButtonStyle}" />

                <Button Content="Profil" 
                        Command="{Binding ShowSettingsCommand}" 
                        Style="{StaticResource MenuButtonStyle}" />
                
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="20">
            <Grid Visibility="{Binding IsDashboardVisible, Converter={StaticResource BoolToVis}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Översikt" FontSize="24" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="◀" Command="{Binding PreviousMonthCommand}" Width="30" Height="30"/>
                        <TextBlock Text="{Binding CurrentMonthHeader}" VerticalAlignment="Center" Margin="10,0" FontWeight="Bold" MinWidth="100" TextAlignment="Center"/>
                        <Button Content="▶" Command="{Binding NextMonthCommand}" Width="30" Height="30"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource SummaryCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Inkomster" Foreground="{StaticResource TextSecondary}" 
                                       FontSize="13" FontWeight="Medium"/>
                            <TextBlock Text="{Binding TotalIncome, StringFormat={}{0:N0} kr}" 
                                       Foreground="{StaticResource IncomeGreen}" FontSize="24" 
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding SalaryInfo}"
                                       FontSize="10" Foreground="Gray" Margin="0,5,0,0"/>

                            <Button Content="Anmäl frånvaro"
                                    Command="{Binding AddAbsenceCommand}"
                                    Margin="0,10,0,0" Padding="5,2" FontSize="10"
                                    Background="Transparent" BorderBrush="LightGray" BorderThickness="1"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource SummaryCardStyle}">
                        <StackPanel>
                            <TextBlock Text="Utgifter" Foreground="Gray" FontSize="12"/>
                            <TextBlock Text="{Binding TotalExpense, StringFormat={}{0:N0} kr}" Foreground="{StaticResource ExpenseRed}" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource SummaryCardStyle}" Background="#E3F2FD">
                        <StackPanel>
                            <TextBlock Text="Denna Månad" Foreground="#1565C0" FontSize="12" FontWeight="Bold"/>
                            <TextBlock Text="{Binding ForecastBalance, StringFormat={}{0:N0} kr}" 
                                       Foreground="#1565C0" FontSize="20" FontWeight="Bold"/>

                            <Separator Background="#BBDEFB" Margin="0,5"/>

                            <TextBlock Text="Totalt Saldo" Foreground="#0D47a1" FontSize="12" 
                                       FontWeight="Bold" Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding TotalBalance, StringFormat={}{0:N0} kr}"
                                       Foreground="#0d47a1" FontSize="22" FontWeight="ExtraBold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="20" Margin="0,20,0,0">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="Månadens transaktioner" 
                                   FontSize="16" FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryDark}" Margin="0,0,0,15"/>

                        <ListView ItemsSource="{Binding Transactions}" BorderThickness="0" 
                                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Focusable" Value="False"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <Border Background="{TemplateBinding Background}" Padding="0,8" BorderBrush="#F0F0F0" BorderThickness="0,0,0,1">
                                                    <ContentPresenter/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FAFAFA"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="90"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding DisplayDate}" Grid.Column="0" Foreground="{StaticResource TextSecondary}" 
                                                   VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Name}" FontWeight="Medium" Foreground="{StaticResource TextPrimary}"/>
                                            <TextBlock Text="{Binding CategoryName}" FontSize="12" Foreground="{StaticResource TextSecondary}"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" 
                                               Text="{Binding FormattedAmount}" 
                                               Foreground="{Binding DisplayColor}" 
                                               FontWeight="Bold" 
                                               VerticalAlignment="Center"/>

                                        <Button Grid.Column="3" Content="X" 
                                            Command="{Binding DataContext.DeleteTransactionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource DangerButtonStyle}" Width="25"
                                                FontWeight="Bold" Cursor="Hand" HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </DockPanel>
                </Border>

                <Button Grid.Row="3" 
                    Content="+ Lägg till transaktion" 
                    Command="{Binding AddTransactionCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0"/>
            </Grid>

            <Grid Visibility="{Binding IsAllTransactionsVisible, Converter={StaticResource BoolToVis}}" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Transaktionshistorik" Style="{StaticResource HeaderStyle}" Grid.Row="0"/>

                <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="10" 
                        BorderBrush="#E0E0E0" BorderThickness="1">

                    <DataGrid ItemsSource="{Binding Transactions}" 
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Background="White"
                              BorderThickness="0"
                              RowHeaderWidth="0">

                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Padding" Value="10,10"/>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E3F2FD"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Datum" Binding="{Binding DisplayDate}" Width="120"/>

                            <DataGridTextColumn Header="Beskrivning" Binding="{Binding Name}" Width="*"/>

                            <DataGridTextColumn Header="Kategori" Binding="{Binding CategoryName}" Width="100"/>

                            <DataGridTextColumn Header="Typ" Binding="{Binding TypeName}" Width="80" Foreground="Gray"/>

                            <DataGridTextColumn Header="Belopp" Binding="{Binding FormattedAmount}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="{Binding DisplayColor}"/>
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTemplateColumn Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="✕" 
                                                Command="{Binding DataContext.DeleteTransactionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource DangerButtonStyle}" FontWeight="Bold" Cursor="Hand"
                                                ToolTip="Radera transaktion permanent"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>

            <Grid Visibility="{Binding IsSettingsVisible, Converter={StaticResource BoolToVis}}"
                  Background="{StaticResource BackgroundLight}">

                <StackPanel DataContext="{Binding SettingsVM}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                    <TextBlock Text="Inställningar" FontSize="24" FontWeight="Bold" Margin="0,0,0,30" HorizontalAlignment="Center"/>

                    <TextBlock Text="Årsinkomst (före skatt)" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding YearlyIncome, StringFormat=N0}" Height="35" Margin="0,5,0,20" Padding="5" VerticalContentAlignment="Center"/>

                    <TextBlock Text="Årsarbetstid (timmar)" FontWeight="SemiBold"/>
                    <TextBlock Text="Standard heltid är 2080 h" FontSize="10" Foreground="Gray"/>
                    <TextBox Text="{Binding YearlyWorkHours}" Height="35" Margin="0,5,0,20" Padding="5" VerticalContentAlignment="Center"/>

                    <Border Background="#E3F2FD" Padding="15" CornerRadius="5" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Din beräknade timlön:" Foreground="Gray"/>
                            <TextBlock Text="{Binding HourlyRateDisplay}" FontSize="20" FontWeight="Bold" Foreground="#1565C0"/>
                        </StackPanel>
                    </Border>

                    <Button Content="Spara Inställningar" 
                    Command="{Binding SaveCommand}"
                    Background="{StaticResource PrimaryDark}" Foreground="White"
                    Height="40"/>
                </StackPanel>
            </Grid>
        </Grid>

    </Grid>
</Window>
